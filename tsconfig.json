{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@screens/*": ["src/screens/*"],
      "@theme": ["src/theme"],
      "@types": ["src/types"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@routes": ["src/routes"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"],
      "@brand/*": ["src/brand/*"],
      "@api": ["src/api"],
      "@services/*": ["src/services/*"],
    }
  }
}
